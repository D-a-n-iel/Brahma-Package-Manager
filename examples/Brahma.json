{
    "package": {
        "name": "Brahma",
        "version" : "1.0",
        "definition" : {
            "source": {
                "required-files": ["__main__.py", "main.py", "src"]
            },
            "build": {
                "commands": ["zip -r Brahma.zip __main__.py main.py src", "sed -i '1i#!/usr/bin/env python3' Brahma.zip"]
            },
            "install": {
                "make-executable": ["Brahma.zip"],
                "file-copy": [{ "file": "Brahma.zip", "destination": "/usr/bin/Brahma" }]
            }
        }
    }
}
